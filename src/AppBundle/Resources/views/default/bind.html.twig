{% extends "base.html.twig" %}
{% block title %}绑定用户{% endblock %}
{% block stylesheets %}
    {% stylesheets '@AppBundle/Resources/public/css/signin.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <h2 class ="text-center text-muted">绑定用户</h2>
        </div>
        <div class="row" id="error-alert" style="display:none">
            <div class="col-md-3"></div>
            <div class="col-md-6 alert alert-danger text-center" role="alert" id="error-message"></div>
            <div class="col-md-3"></div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form class="form-horizontal" method="post" action="{{ path('qq_register') }}">
                    <div class="form-group input-group-sm">
                        <label for="username" class="col-sm-2 control-label">账号</label>
                        <div class="col-sm-8">
                            <input type="text"
                                   class="form-control"
                                   id="username"
                                   name="_username"
                                   placeholder="请输入用户名/手机号/邮箱">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-2 control-label">密码</label>
                        <div class="col-sm-8">
                            <input type="password"
                                   class="form-control"
                                   id="password"
                                   name="_password"
                                   placeholder="请输入密码">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <input type="submit" class="btn btn-default" value="注册">
                            <input type="submit" class="btn btn-default" value="绑定">
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
{% endblock %}